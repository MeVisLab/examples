Interface  {
  Inputs {}
  Outputs {}
  Parameters {}
}

Commands{
  source = $(LOCAL)/BaseNetwork.py
  
  wakeupCommand = "setDefaults"
    
  FieldListener {
    listenField = "SubImage.sz"
    listenField = "SubImage.z"
    listenField = "Histogram.binSize"

    command     = "updateSlices"
  }
}

Window {
  Category{
    Horizontal{
      Vertical{
        expandY = True
        expandX = False
        Box {
          title= "Single Slice"
          Field "SubImage.sz"{
            title = "Plot slice"
          }
          Button  { title = "in 2D"
            command = "singleSlice2D"
          }
          Button {
            title   = "in 3D"
            command = "singleSlice3D"
          }
          Empty{}
        }
        Box{
          title = "Sequence"
          Field "SubImage.z"{
            title = "From slice"
          }
          Field "SubImage.sz"{
            title = "To slice"
          }
          Button{ title = "Plot 2D"
            command = "click2D"
          }
          Button{ title = "Plot 3D"
            command = "click3D"}
        }
        Field "Histogram.binSize"{
          title = "Bin size"
        }
        Empty{
          expandY = True
      }
    }
      Box{
        MatplotlibCanvas {
          expandY = True
          expandX = True
          name        = canvas
          useToolBar = True
        }
        expandY = True
        expandX = True
      }     
    }
  }
}